<%= render 'shared/errors', obj: @user %>


<%= form_with(model: @user, local: true) do |f| %>
  
  <div class ="p-3">
    <div class="mb-3">
      <%= f.label :username %>
      <%= f.text_field :username, type:"text", class:"form-control"%>  
    </div>
        <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, type:"email", class:"form-control"%>  
    </div>
        <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, type:"password", class:"form-control"%>  
    </div>  
    <%= f.submit(@user.new_record? ? 'Sign up' : 'Save changes', class: "btn btn-primary") %>
  </div>

<% end %>

<div class="mb-3 text-center">
      <%= link_to '[ Cancel and return ]', users_path , class: "text-info" %>
</div>