<h1 class= "text-center p-4">Article list</h1>

<% @articles.each do |article| %>
<div>
<div class="container">
    <div class="card text-center shadow mb-5 bg-body rounded">
        <div class="card-header">
            <%= article.user.username %>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= article.title%></h5>
            <p class="card-text"><%= article.description%></p>
        <div class="btn-group" role="group" aria-label="Basic example">
            <%= button_to "Show", article_path(article), method: :get, class:"btn btn-outline-secondary d-inline" %>
            <%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-outline-secondary d-inline" %>
            <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-outline-secondary d-inline" %>
        </div>    
                

        </div>
        <div class="card-footer text-muted">
            2 days ago
        </div>
    </div>
</div>
<% end %>


<br>

<div class="p-5" ><%=button_to "New", new_article_path, method: :get, id: "add_btn" %></div><br>
</div>

