

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  
  <div class ="p-3">
   
        <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, type:"email", class:"form-control"%>  
    </div>
        <div class="mb-3">
      <%= f.label :password %>
      <%= f.password_field :password, type:"password", class:"form-control"%>  
    </div>  
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>

<% end %>

<div class="mb-3 text-center">
      <%= link_to '[ Cancel and return ]', root_path , class: "text-info" %>
</div>